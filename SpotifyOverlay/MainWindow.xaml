<Window x:Class="SpotifyOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyOverlay"
        mc:Ignorable="d"
        Title="MainWindow" Height="84.303"
        Deactivated="Window_Deactivated_1" 
        MouseDown="Window_MouseDown"
        Foreground="{x:Null}" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Topmost="True">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="Black"/>
    </Window.Background>
    <Grid IsEnabled="False" VerticalAlignment="Center">
        <Image x:Name="image" HorizontalAlignment="Left" Margin="10,-5,0,-3" Width="65" Source="spotify-unlocked-free.png"/>
        <Label x:Name="ArtistLabel" Content="Label" Margin="80,-5,0,25" Foreground="White" FontWeight="Bold" FontSize="22" HorizontalAlignment="Left" Width="335"/>
        <Label x:Name="SongLabel" Content="Label" Margin="80,20,10,-3" Foreground="White" FontStyle="Italic" FontSize="22"/>

    </Grid>
</Window>
